{% extends 'base.html.twig' %}
{% block content %}
<section class="hero is-large" id="home">
  <nav class="navbar" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
      <a class="navbar-item" href="{{site.link}}">
        <img src="{{logo}}" alt="loog goal business">
      </a>
      <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
      </a>
    </div>

    <div id="navbarBasicExample" class="navbar-menu">
        {% include "partials/navigation.twig" with {'menu': menu.get_items} %}
    </div>
  </nav>
  <div class="mask"></div>
  <div class="hero-body">
    <div class="container">
      <div class="columns">
        <div class="column is-two-thirds">
          <h1 class="subtitle is-3">
            {{post.headline}}
          </h1>
          
        </div>
      </div>
    </div>
  </div>
  <div class="wrapper white bordered">
      <div class="container">
        <div class="columns is-vcentered is-multiline">
          <div class="column is-narrow">
            <h5 class="title is-6 is-capitalized">Quienes han confiado en nosotros</h5>
          </div>
          {% for client in post.get_field("clients") %}
          <div class="column has-text-centered">
            <a href="{{client.external_link}}">
              <img src="{{client.img.url}}" alt="{{client.img.alt}}">
            </a>
          </div>
          {% endfor %}
        </div>
      </div>
  </div>
</section>
<section class="section" id="yenni">
  <div class="mask"></div>
  <div class="container">
    <div class="columns">
      <div class="column is-half">
        <h2 class="title is-1 is-big-1">yenniferth carranza</h2>
        <p class="content is-medium">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Consectetur sed odit excepturi dolores eveniet explicabo commodi reprehenderit doloribus molestias, vel provident dolore in maxime at itaque, eligendi sit! A, animi.</p>
        <br>
        
      </div>
    </div>
  </div>
</section>

{% endblock %}